{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "paths": {
      "$lib/*": ["./lib/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
